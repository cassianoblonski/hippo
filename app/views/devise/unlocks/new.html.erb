<div class="row">
  <div class="col-md-5 mx-auto">
    <h2 class="form-signin-heading">Resend unlock instructions</h2>
    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name),
    html: { class: 'form-signin', method: :post }) do |f| %>
      <%= render "/shared/errors", resource: resource %>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Resend unlock instructions", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
